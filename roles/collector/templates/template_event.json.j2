{
  "index_patterns": ["{{elasticsearch_index_events}}*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas":0,
      "refresh_interval":"60s",
      "index.lifecycle.name": "{{elasticsearch_index_events}}",
      "index.lifecycle.rollover_alias": "{{elasticsearch_index_events}}-alias"
    },
    "mappings": {
      "properties" : {
        "data" : {
          "properties" : {
            "id" : {
              "type" : "short"
            },
            "icon" : {
              "type" : "object",
              "enabled": false,
            },
            "keyAttribute" : {
              "type" : "keyword",
              "ignore_above" : 256
            },
            "keyId" : {
              "type" : "short",
            },
            "newValue" : {
              "type" : "keyword",
              "fields": {
                "numeric": {
                  "type":  "float",
                  "ignore_malformed": true
                }
              }
            },
            "oldValue" : {
              "type" : "keyword",
              "fields": {
                "numeric": {
                  "type":  "float",
                  "ignore_malformed": true
                }
              }
            },
            "property" : {
              "type" : "keyword",
              "ignore_above" : 256
            },
            "actionName" : {
              "type" : "keyword",
              "ignore_above" : 256
            },
            "args" : {
              "type" : "keyword",
              "ignore_above" : 256
            },
            "type" : {
              "type" : "keyword",
              "ignore_above" : 256
            },
            "trigger" : {
              "type" : "keyword",
              "ignore_above" : 256
            },
            "subid" : {
              "type" : "short",
            },
            "startTime" : {
              "type" : "date",
              "format" : "epoch_second"
            }
          }
        },
        "id" : {
          "type" : "unsigned_long"
        },
        "objects" : {
          "properties" : {
            "id" : {
              "type" : "short"
            },
            "type" : {
              "type" : "keyword",
              "ignore_above" : 256
            }
          }
        },
        "sourceId" : {
          "type" : "short"
        },
        "sourceType" : {
          "type" : "keyword",
          "ignore_above" : 256
        },
        "sourceName" : {
          "type" : "keyword",
          "ignore_above" : 256
        },
        "deviceType" : {
          "type" : "keyword",
          "ignore_above" : 256
        },
        "type" : {
          "type" : "keyword",
          "ignore_above" : 256
        },
        "name" : {
          "type" : "keyword",
          "ignore_above" : 256
        },
        "room" : {
          "type" : "keyword",
          "ignore_above" : 256
        },
        "timestamp" : {
          "type" : "date",
          "format" : "epoch_second"
        }
      }
    }
  }
}