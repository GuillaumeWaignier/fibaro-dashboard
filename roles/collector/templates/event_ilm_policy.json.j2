{
  "policy": {
    "phases": {
      "hot": {
        "actions": {
          "rollover": {
            "max_size": "{{elasticsearch_events_roll_size}}",
            "max_age": "{{elasticsearch_events_roll_date}}"
          }
        }
      },
      "delete": {
        "min_age": "{{elasticsearch_events_delete_date}}",
        "actions": {
          "delete": {}
        }
      }
    }
  }
}